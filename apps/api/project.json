{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "implicitDependencies": ["prisma"],
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/api",
        "main": "apps/api/src/index.ts",
        "tsConfig": "apps/api/tsconfig.app.json"
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": "dependencies"
        }
      ]
    },
    "close:db": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": ["docker compose -f docker-compose.yml down"],
        "cwd": "apps/api"
      }
    },
    "start:db": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "docker compose -f apps/api/docker-compose.yml up -d --wait"
        ]
      }
    },
    "serve:api": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "api:build",
        "inspect": false
      },
      "watch": true
    },
    "serve": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "nx migrate:dev prisma",
          "nx seed:db api",
          "nx serve:api api"
        ],
        "parallel": false
      },
      "dependsOn": [{ "target": "start:db", "projects": "self" }]
    },
    "seed:db": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "commands": ["pnpm prisma db seed"],
        "cwd": "apps/api"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/api"],
      "options": {
        "jestConfig": "apps/api/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "deploy": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "flyctl deploy --config apps/api/fly.toml --dockerfile apps/api/Dockerfile"
      }
    },
    "typecheck": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "tsc -p tsconfig.app.json",
        "cwd": "apps/api"
      },
      "dependsOn": [{ "projects": "dependencies", "target": "build" }]
    }
  },
  "tags": []
}
