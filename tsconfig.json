{
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "paths": {
      "@internalTypes/*": ["types/*"],
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@utils/*": ["utils/*"]
    },
    "module": "ESNext",
    "types": [],
    "sourceMap": true,
    "target": "ES2018",
    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noImplicitReturns": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmit": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["src"]
}
