{
  "compileOnSave": false,
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ],
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "target": "ES2019",
    "sourceMap": true,
    "module": "ESNEXT",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": false,
    "useUnknownInCatchVariables": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@open-decision/api-client": ["packages/api/client/src/index.ts"],
      "@open-decision/api-react-binding": [
        "packages/api/react-binding/src/index.ts"
      ],
      "@open-decision/api-helpers": ["packages/api/helpers/src/index.ts"],
      "@open-decision/api-specification": [
        "packages/api/specification/src/index.ts"
      ],
      "@open-decision/design-system": ["packages/design-system/src/index.ts"],
      "@open-decision/interpreter": ["packages/interpreter/src/index.ts"],
      "@open-decision/interpreter-react": [
        "packages/interpreter-react/src/index.ts"
      ],
      "@open-decision/models": ["packages/models/src/index.ts"],
      "@open-decision/node-editor": ["packages/node-editor/src/index.ts"],
      "@open-decision/plugins-edge-compare": [
        "packages/plugins/edge/compare/src/index.ts"
      ],
      "@open-decision/plugins-edge-direct": [
        "packages/plugins/edge/direct/src/index.ts"
      ],
      "@open-decision/plugins-edge-helpers": [
        "packages/plugins/edge/helpers/src/index.ts"
      ],
      "@open-decision/plugins-node-decision": [
        "packages/plugins/node/decision/src/index.ts"
      ],
      "@open-decision/plugins-node-document": [
        "packages/plugins/node/document/src/index.ts"
      ],
      "@open-decision/plugins-node-form": [
        "packages/plugins/node/form/src/index.ts"
      ],
      "@open-decision/plugins-node-group": [
        "packages/plugins/node/group/src/index.ts"
      ],
      "@open-decision/plugins-node-helpers": [
        "packages/plugins/node/helpers/src/index.ts"
      ],
      "@open-decision/plugins-node-info": [
        "packages/plugins/node/info/src/index.ts"
      ],
      "@open-decision/plugins-node-placeholder": [
        "packages/plugins/node/placeholder/src/index.ts"
      ],
      "@open-decision/variables": ["packages/variables/src/index.ts"],
      "@open-decision/renderer": ["packages/renderer/src/index.ts"],
      "@open-decision/rich-text-editor": [
        "packages/rich-text-editor/src/index.ts"
      ],
      "@open-decision/test-utils": ["packages/test-utils/src/index.ts"],
      "@open-decision/translations": ["packages/translations/src/index.ts"],
      "@open-decision/tree-client": ["packages/tree/client/src/index.ts"],
      "@open-decision/tree-sync": ["packages/tree/sync/src/index.ts"],
      "@open-decision/tree-type": ["packages/tree/type/src/index.ts"],
      "@open-decision/tree-utils": ["packages/tree/utils/src/index.ts"],
      "@open-decision/tree-clientWithPlugins": [
        "packages/tree/clientWithPlugins/src/index.ts"
      ],
      "@open-decision/type-classes": ["packages/type-classes/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
